#!/bin/bash -l

#PBS -l walltime=24:00:00
#PBS -l nodes=5:ppn=1
#PBS -l mem=10gb
#PBS -m bae
#PBS -o $HOME/tuning-hybrid/irace-hybrid.stdout 
#PBS -e $HOME/tuning-hybrid/irace-hybrid.stderr 
#PBS -N hybrid_pcol

module load graph-tool/2.2.42-foss-2015a-Python-2.7.9
module load R/3.1.1-intel-2014b

MPIRUN=mpirun

cd $HOME/tuning-hybrid

$MPIRUN -outfile-pattern $HOME/tuning-hybrid/mpi.out -errfile-pattern $HOME/tuning-hybrid/mpi.err -np 1 $IRACE_HOME/bin/irace --exec-dir=$HOME/tuning-hybrid/arena --mpi 1 --parallel 4
